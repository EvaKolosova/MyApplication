<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.foo.simplegeocodeapp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65FFFFFF">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="180dp"
        android:layout_height="221dp"
        android:layout_marginBottom="35dp"
        android:textColor="#363535"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/tableLayout1"
        app:layout_constraintTop_toTopOf="@id/imageButton"
        app:layout_constraintVertical_bias="0.185" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:onClick="onImButtonRefresh"
        android:scaleType="fitXY"
        android:src="@drawable/refreshbutton"
        android:state_pressed="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="178dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="Hourly forecast:"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="21dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />/>

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:onClick="onImButtonSettingsClick"
        android:scaleType="fitXY"
        android:src="@drawable/settingbutton"
        android:state_pressed="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/rainbow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout1"
        tools:layout_editor_absoluteY="606dp">

        <TextView
            android:id="@+id/textViewPlace"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Places"
            android:gravity="center"
            android:textSize="25dp" />

    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:gravity="center"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="30dp">

            <TextView
                android:id="@+id/TextView2"
                android:layout_gravity="center"
                android:text="Time"
                android:textColor="@color/design_default_color_primary"
                android:textSize="23dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>

            <TextView
                android:id="@+id/TextView3"
                android:layout_gravity="center"
                android:text="Weather"
                android:textColor="@color/design_default_color_primary"
                android:textSize="23dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>

            <TextView
                android:id="@+id/TextView4"
                android:layout_gravity="center"
                android:text="T"
                android:textColor="@color/design_default_color_primary"
                android:textSize="23dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:id="@+id/textView5"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="2dp"></TextView>

            <TextView
                android:id="@+id/textView6"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView7"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView9"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView10"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView12"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView13"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView14"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView15"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView16"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView18"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView19"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView120"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/textView21"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/textView22"
                android:gravity="center"
                android:textColor="#0D9DE0"
                android:textSize="20dp"></TextView>

        </TableRow>

    </TableLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="177dp"
        android:layout_height="191dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="217dp"
        android:layout_marginRight="217dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="?attr/selectableItemBackground" />


</android.support.constraint.ConstraintLayout>